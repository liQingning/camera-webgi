{

  "$schema": "tsconfig.json",   // [!code ++]
  "compilerOptions": {
    "isolatedModules":true,
    "strict": true,
    "target": "es6",
    "module": "es6", 
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
